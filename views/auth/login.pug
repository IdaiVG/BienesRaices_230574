extends ../layout/index

block contenido 
    div.py-10 
        h1.text-center.font-extrabold.my-10.text-4xl.text-white Bienes 
            span.font-normal.text-black Raíces 
        h2.text-center.font-extrabold.text-2xl=page
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5.px-6(action="")
                   
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold Correo Electronico: 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-winkle(type="email" placeholder="Ej. JuanitoPeréz@gmail.com" name="correo_usuario")
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-bold Contraseña: 
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-winkle(type="password" placeholder="Mínimo de 8 carácteres" name="pass_usuario")
                    div.flex.items-center.justify-between
                        a.text-black.text-xs(href="/auth/createAccount" class="hover:underline decoration2 hover:decoration-peri") ¿No tienes cuenta? Registrate
                        a.text-black.text-xs(href="/auth/passwordRecovery" class="hover:underline decoration2 hover:decoration-peri") Olvide mi Contraseña
                    input(class="w-full bg-peri hover:bg-red-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Ingresar")