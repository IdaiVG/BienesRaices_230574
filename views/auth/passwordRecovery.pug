extends ../layout/index

block contenido 
    div.py-10 
        h1.text-center.font-extrabold.my-10.text-4xl.text-peri Bienes 
            span.font-normal.text-black Raíces 
        h2.text-center.font-extrabold.text-2xl=page
        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    // Verifica si error tiene la propiedad 'msg'
                    if error.msg
                        div(class="bg-reds text-white p-4 rounded-md flex items-center justify-between mb-2")
                            p(class="text-sm font-bold")= error.msg
                            button(class="ml-2 bg-transparent border-0 text-white" onclick="this.parentElement.style.display='none'") &times;
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5.px-6(method="POST" action="/auth/passwordRecovery" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold Correo Electronico: 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="email" placeholder="Ej. JuanitoPeréz@gmail.com" name="correo_usuario")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login" class="hover:underline decoration2 hover:decoration-peri") ¿Ya tienes cuenta? Ingresa a la plataforma
                    input(class="w-full bg-winkle hover:bg-palePurple text-white font-bold py-3 cursor-pointer" type="submit" value="Recuperar Contraseña")

    script.
        document.querySelectorAll('.bg-reds').forEach(error => {
            setTimeout(() => {
                error.style.display = 'none';
            }, 7000); 
        });